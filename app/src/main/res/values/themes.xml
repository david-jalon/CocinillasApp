<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CocinillasApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <!-- Usamos popupMenuStyle para aplicar nuestro estilo personalizado -->
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Theme.CocinillasApp" parent="Base.Theme.CocinillasApp" />

    <!-- Estilo personalizado para el PopupMenu -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <!-- Usamos android:background porque este estilo se aplica sobre el widget -->
        <item name="android:background">@color/orange</item>
    </style>
</resources>